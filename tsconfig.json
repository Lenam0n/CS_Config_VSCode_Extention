{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "out",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@type/*": ["src/types/*"],
      "@feature/*": ["src/features/*"],
      "@command/*": ["src/commands/*"],
      "@templates/*": ["src/templates/*"],
      "@util/*": ["src/utils/*"],
      "@data/*": ["data/*"],

      "~/*": ["src/__tests__/*"],
      "~feature/*": ["src/features/__tests__/*"],
      "~command/*": ["src/commands/__tests__/*"],
      "~util/*": ["src/utils/__tests__/*"],
      "~helper/*": ["src/__tests__/helpers/*"]
    }
  },
  "include": ["src/**/*"]
}
